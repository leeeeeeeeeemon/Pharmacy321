<Window x:Class="Pharmacy321.ProvidersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy321"
        mc:Ignorable="d"
        Title="ProvidersWindow" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding Providers}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID_Provider}" />
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name_Provider}" />
                    <GridViewColumn Header="Address" DisplayMemberBinding="{Binding Address_Provider}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
