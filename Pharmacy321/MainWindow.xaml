<Window x:Class="Pharmacy321.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy321"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    
    
    <Grid Background="DarkCyan">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Login" Grid.Row="1" Background="GhostWhite"/>
                <TextBox Grid.Row="1" Width="200" Height="30" VerticalAlignment="Top" Margin="30" ></TextBox>
                <Label Content="Password" Grid.Row="1" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Width="200" Height="30" VerticalAlignment="Bottom" Margin="20"></TextBox>
            </Grid>
           
        </Grid>
    </Grid>
</Window>
