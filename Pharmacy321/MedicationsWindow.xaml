<Window x:Class="Pharmacy321.MedicationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy321"
        mc:Ignorable="d"
        Title="MedicationsWindow" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding Medications}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID_Medication}" />
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name_Medication}" />
                    <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Quantity_In_Stock}" />
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price_Medication}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
