<Window x:Class="Pharmacy321.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy321"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Username:" Margin="0,0,0,10"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Password:" Margin="0,0,0,10"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Login" Width="100" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
