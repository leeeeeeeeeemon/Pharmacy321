<Window x:Class="Pharmacy321.ContractsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pharmacy321"
        mc:Ignorable="d"
        Title="ContractsWindow" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding Contracts}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID_Contract}" />
                    <GridViewColumn Header="Number" DisplayMemberBinding="{Binding Contract_Number}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
